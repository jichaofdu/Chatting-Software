<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scaleType="centerCrop"
    	android:src="@drawable/modify_bg"
        />

      <EditText
        android:id="@+id/modifyNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:hint="Please Input Your New Nickname" >
    
    <EditText
        android:id="@+id/modifyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/modifyNickname"
        android:layout_alignRight="@+id/modifyNickname"
        android:layout_below="@+id/modifyNickname"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Please Input Your New Password"
        android:inputType="textPassword" />

    <EditText
            android:id="@+id/modifyIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Introduction"
            android:layout_below="@+id/modifyPassword" 
            android:layout_alignLeft="@+id/modifyPassword"
            android:layout_marginTop="30dp"/>

    <Button
            android:id="@+id/modifyConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginBottom="86dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/modifyIntroduction"
            android:layout_alignRight="@+id/modifyIntroduction"/>



        <requestFocus />
    </EditText>

</RelativeLayout>